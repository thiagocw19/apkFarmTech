<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerComponents">
        <item  name="android:layout_width">match_parent</item>
        <item name="android:layout_height">280dp</item>
        <item  name="android:background">@drawable/conteiner_components</item>
        <item   name="android:layout_margin">25dp</item>
    </style>

    <style name="fundobomba">
        <item  name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item  name="android:background">@drawable/fundo_bomba</item>
        <item   name="android:layout_margin">20dp</item>
    </style>

    <style name="fundo">
        <item  name="android:layout_width">150dp</item>
        <item name="android:layout_height">130dp</item>
        <item  name="android:background">@drawable/fundo</item>
        <item   name="android:layout_margin">20dp</item>
    </style>

    <style name="Edit_text">
        <item   name="android:layout_width">match_parent</item>
        <item   name="android:layout_height">50dp</item>
        <item   name="android:background">@drawable/edit_text</item>
        <item   name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:maxLength">28</item>
    </style>

    <style name="Botao">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/botao</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>